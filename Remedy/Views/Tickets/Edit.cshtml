@using Remedy.Models.Enums
@model Remedy.Models.Ticket

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Ticket</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="Created" />
            <input type="hidden" asp-for="Updated" />
            <input type="hidden" asp-for="ProjectId" />
            <input type="hidden" asp-for="SubmitterUserId" />
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TicketTypeId" class="control-label"></label>
                <select asp-for="TicketTypeId" class="form-control" asp-items="ViewBag.TicketTypeId"></select>
                <span asp-validation-for="TicketTypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TicketPriorityId" class="control-label"></label>
                <select asp-for="TicketPriorityId" class="form-control" asp-items="ViewBag.TicketPriorityId"></select>
                <span asp-validation-for="TicketPriorityId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TicketStatusId" class="control-label"></label>
                @if (User.IsInRole("Admin, ProjectManager"))
                {
                    <select asp-for="TicketStatusId" class="form-control" asp-items="ViewBag.TicketStatusId"></select>
                }
                else
                {
                    <input type="hidden" asp-for="TicketStatusId">
                    <select asp-for="TicketStatusId" class="form-control" asp-items="ViewBag.TicketStatusId" disabled></select>
                }
                <span asp-validation-for="TicketStatusId" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    @if (User.IsInRole("Admin, ProjectManager"))
                    {
                        <input class="form-check-input" asp-for="Archived" /> @Html.DisplayNameFor(model => model.Archived)
                    }
                    else
                    {
                        <input class="form-check-input" asp-for="Archived" disabled /> @Html.DisplayNameFor(model => model.Archived)
                    }
                </label>
            </div>

            <div class="form-group">
                <label class="control-label">Assign Ticket Developer</label>
                @if (User.IsInRole("Admin , ProjectManager"))
                {
                    <select name="DevId" class="form-control" asp-items="ViewBag.TicketDevelopers"></select>
                }
                else
                {
                    <input type="hidden" asp-for="DeveloperUserId">
                    <select name="DevId" class="form-control" asp-items="ViewBag.TicketDevelopers"></select>
                }
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
