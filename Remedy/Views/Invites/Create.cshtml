@model Remedy.Models.Invite
<header class="page-header">
    <h2>Send Invite</h2>

    <div class="right-wrapper text-end">
        <ol class="breadcrumbs">
            <li>
                <a asp-action="Index">
                    <i class="bx bx-home-alt"></i>
                </a>
            </li>
            <li><span>Projects</span></li>
        </ol>
        <a class="sidebar-right-toggle" data-open="sidebar-right"><i class="fas fa-chevron-left"></i></a>
    </div>
</header>
<div class="row justify-content-center">
    <div class="col-6">
        <section class="card card-modern card-big-info">
            <div class="card-body">
                <div class="row">
                    <div class="col-lg-2-5 col-xl-1-5">
                        <i class="card-big-info-icon bx bx-purchase-tag-alt"></i>
                        <h2 class="card-big-info-title">Invite Details</h2>
                        <p class="card-big-info-desc">Enter invite information.</p>
                    </div>
                    <div class="col-lg-3-5 col-xl-4-5">
                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group row align-items-center mb-3">
                                <label class="col-lg-5 col-xl-3 control-label text-lg-end mb-0">First Name</label>
                                <div class="col-lg-7 col-xl-6">
                                    <input asp-for="InviteeFirstName" type="text" class="form-control form-control-modern">
                                </div>
                            </div>
                            <div class="form-group row align-items-center mb-3">
                                <label class="col-lg-5 col-xl-3 control-label text-lg-end mb-0">Last Name</label>
                                <div class="col-lg-7 col-xl-6">
                                    <input asp-for="InviteeLastName" type="text" class="form-control form-control-modern">
                                </div>
                            </div>
                            <div class="form-group row align-items-center mb-3">
                                <label class="col-lg-5 col-xl-3 control-label text-lg-end mb-0">Email</label>
                                <div class="col-lg-7 col-xl-6">
                                    <input asp-for="InviteeEmail" type="text" class="form-control form-control-modern">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-lg-5 col-xl-3 control-label text-lg-end pt-2 mt-1 mb-0">Message</label>
                                <div class="col-lg-7 col-xl-6">
                                    <textarea asp-for="Message" class="form-control form-control-modern" rows="4"></textarea>
                                </div>
                            </div>
                            <div class="form-group row align-items-center mb-3">
                                <label class="col-lg-5 col-xl-3 control-label text-lg-end mb-0">Project Priority</label>
                                <div class="col-lg-7 col-xl-6">
                                    <select asp-for="ProjectId" class="form-control form-control-modern" asp-items="ViewBag.ProjectId"></select>
                                </div>
                            </div>
                            <div class="row action-buttons">
                                <div class="col-12 col-md-auto ms-md-auto mt-3 mt-md-0 ms-auto">
                                    <input type="submit" value="Save" class="btn btn-success btn-px-4 py-3 d-flex align-items-center font-weight-semibold line-height-1" />
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>
